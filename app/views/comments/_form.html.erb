<%= simple_form_for([@article, @comment]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <% if FALSE %>
	    <%= f.association :user %>
	    <%= f.association :article %>
	<% end %>
    <%= f.input :body %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
